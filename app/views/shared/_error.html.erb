<% if error_prone.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show mt-4 mb-4" role="alert">
    <strong class="h4" >The following caused an error</strong>
    <ul class="m-0 mt-2">
      <% error_prone.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
