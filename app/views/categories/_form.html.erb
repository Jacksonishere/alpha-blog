<%= render partial: 'shared/error', locals: { error_prone: @category } %>

<section class="mt-2 bg-white p-4 shadow p-3 mb-5 bg-white rounded">
  <%= form_with(model: @category, local: true) do |f| %>
    <div class="form-group row">
      <%= f.label :name, class: "col-sm-2 col-form-label"%>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control", placeholder: "Enter name", value: @category.name %>
      </div>
    </div>

    <%= f.submit class: "d-block mx-auto mt-4 btn btn-outline-primary" %>
  <% end %> 
</section>
