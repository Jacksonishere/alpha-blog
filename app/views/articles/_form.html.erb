<%= render partial: 'shared/error', locals: { error_prone: article } %>

<section class="mt-2 bg-white p-4 shadow p-3 mb-5 bg-white rounded">
  <%= form_with(model: article, local: true) do |f| %>

  <div class="form-group row">
    <%= f.label :title, class: "col-sm-2 col-form-label"%>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control", placeholder: "Enter title", value: article.title %>
    </div>
  </div>

  <div class="form-group row mt-4">
    <%= f.label :description, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control", placeholder: "Enter Description", rows: "10", value: article.title %>
    </div>
  </div>

    <%= f.submit class: "d-block mx-auto mt-4 btn btn-outline-primary" %>

<% end %> 
</section>
