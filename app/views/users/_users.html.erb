<div class="users mt-4">
  <% @users.each do |user| %>
      <div class="card text-center w-100 shadow mb-4 bg-white rounded">
          <div class="card-header">
              @<%= link_to user.username, user %>
          </div>
          <div class="card-body">
              <%= gravatar_for(user, size: 200) %>
              <p class="mt-3 mb-0"> <%= user.articles.count %> articles</p>
          </div>
          <div class="links mb-4">
              <%= link_to "View profile", user, class: "btn btn-outline-success" %>

              <% if current_user.admin? %>
                <%= link_to "Delete user", user, class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you want to sure you want to delete the account"} %>
              <% end %>
          </div>
          <div class="card-footer text-muted">
              <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
          </div>
      </div>
  <% end %>
</div>